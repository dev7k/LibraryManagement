@model Customer

<form asp-controller="Customer" asp-action="Update" method="post" class="form-horizontal" role="form">
    @Html.HiddenFor(m => Model.CustomerId)
    <h3>Edit customer @Model.Name</h3>
    <div class="form-group col-md-6">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-default btn-sm" type="submit" value="Return" asp-controller="Customer" asp-action="List" />
        <input class="btn btn-success btn-sm" type="submit" value="Update" />
    </div>
</form>
