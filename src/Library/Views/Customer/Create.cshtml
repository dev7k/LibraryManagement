@model Customer

<form asp-controller="Customer" asp-action="Create" method="post" class="form-horizontal" role="form">
    <h3>Create new customer</h3>
    <div class="form-group col-md-6">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter customer name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-default btn-sm" type="submit" value="Return" asp-controller="Customer" asp-action="List" />
        <input class="btn btn-success btn-sm" type="submit" value="Create" />
    </div>
</form>
