@model Author

<div class="col-sm-6" style="margin-bottom: 5px;">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title"> @Model.Name</h5>
            <p class="card-text">Book count: @Model.Books?.Count</p>

            @if (Model.Books?.Count == 0)
            {
                <a class="btn btn-info btn-sm" asp-area="">View book list</a>
            }
            else
            {
                <a class="btn btn-info btn-sm" asp-area="" asp-controller="Book" asp-action="List" asp-route-authorId="@Model.AuthorId">View book list</a>
            }

            <a class="btn btn-success btn-sm" asp-area="" asp-controller="Author" asp-action="Update" asp-route-id="@Model.AuthorId">Edit</a>
            <a class="btn btn-danger btn-sm" asp-area="" asp-controller="Author" asp-action="Delete" asp-route-id="@Model.AuthorId">Delete</a>
        </div>
    </div>
</div>
