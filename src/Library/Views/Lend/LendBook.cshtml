@model LendViewModel

<form asp-controller="Lend" asp-action="LendBook" method="post" class="form-horizontal" role="form">
    @Html.HiddenFor(m => Model.Book.BookId)
    <h3>Lend a book</h3>
    <div class="form-group col-md-6">
        <label asp-for="Book.Borrower"></label>
        <div class="col-md-6">
            @Html.DropDownListFor(m => m.Book.BorrowerId,
                                         new SelectList(Model.Customers.Select(x => new { Value = x.CustomerId, Text = x.Name }), "Value", "Text"),
                                         "Select Customer",
                                         htmlAttributes: new { @class = "form-control border-input" })
        </div>
    </div>
    <div class="form-group">
        <input class="btn btn-default btn-sm" type="submit" value="Return" asp-controller="Lend" asp-action="List" />
        <input class="btn btn-success btn-sm" type="submit" value="Lend" />
    </div>
</form>
